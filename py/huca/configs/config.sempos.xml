  <category>
    <key>q</key>
    <code>QUANTIFIER</code>
    <abbr>Q</abbr>
    <caption>&lt;u&gt;Q&lt;/u&gt;uantifier</caption>
    <name>Quantifier</name>
    <linkable>false</linkable>
    <title>Quantification or enumeration</title>
  </category>

  <category>
    <key>t</key>
    <code>TIME</code>
    <abbr>T</abbr>
    <caption>&lt;u&gt;T&lt;/u&gt;ime</caption>
    <name>Time</name>
    <linkable>false</linkable>
    <title>Temporal relation</title>
  </category>

  <category>
    <key>c</key>
    <code>CAUSATIVE</code>
    <abbr>C</abbr>
    <caption>&lt;u&gt;C&lt;/u&gt;ausative</caption>
    <name>Causative</name>
    <linkable>false</linkable>
    <title>causative</title>
  </category>

  <category>
    <key>m</key>
    <code>Complete Scene</code>
    <abbr>M</abbr>
    <caption>&lt;u&gt;C&lt;/u&gt;omplete Scene</caption>
    <name>Complete Scene</name>
    <linkable>false</linkable>
    <title>complete scene</title>
  </category>


